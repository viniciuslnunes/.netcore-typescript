@model Tp03.Core.Entities.Container

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>
  <meta name="viewport" content="width=device-width" />
  <title>Edit</title>
</head>

<body>

  <h4>Container</h4>
  <hr />
  <div class="row">
    <div class="col-md-4">
      <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="Numero" class="control-label"></label>
          <input asp-for="Numero" class="form-control" />
          <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Tipo" class="control-label"></label>
          <input asp-for="Tipo" class="form-control" />
          <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Tamanho" class="control-label"></label>
          <input asp-for="Tamanho" class="form-control" />
          <span asp-validation-for="Tamanho" class="text-danger"></span>
        </div>
        <div class="form-grup">
          <label asp-for="BillOfLandingId" class="control-label"></label>
          <select asp-for="BillOfLandingId" class="form-control">
            <option value=""></option>

            @foreach (var billOfLading in ViewBag.BillsOfLading)
            {
              <option value="@billOfLading.Id">@($"{billOfLading.Numero} - {billOfLading.Consignee}")</option>
            }
          </select>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
          <input type="submit" value="Save" class="btn btn-primary" />
        </div>
      </form>
    </div>
  </div>

  <div>
    <a asp-action="Index">Back to List</a>
  </div>

  @section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }
</body>

</html>
